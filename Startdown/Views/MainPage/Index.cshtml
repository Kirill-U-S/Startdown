@{
    ViewData["Title"] = "Main Page";
    ViewBag.Message = TempData["Message"];
}

<div style="position:absolute; top:10%;left:45%">
    <p>
        @if (!string.IsNullOrEmpty(ViewBag.Message))
        {
            <div class="alert alert-danger" style=" width:20%;height:5%;position:relative; top:20px; left:-2%">@ViewBag.Message</div>
        }
        <button class="button" onclick="location.href='https://localhost:7281/Catalog'" type="button">Каталог</button>
    </p>
    <p>
        <button class="button" onclick="location.href='https://localhost:7281/Basket'" type="button">Корзина</button>
    </p>
    <p>
        <button class="button" onclick="location.href='https://localhost:7281/Profile'" type="button">Профиль</button>
    </p>
</div>