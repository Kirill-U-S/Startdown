@{
    ViewBag.Message = TempData["Message"];
    ViewData["Title"] = "Authorization";

}
<body>
    <form asp-controller="Authorization" asp-action="AuthPage" method="post">
        <main >
            <legend style="position:absolute; top:10%;left:40%"><b>Введите логин и пароль</b></legend>
            <div style="position:absolute; top:15%;left:43%">
             <p>
                    <label for="Login">Логин:  </label>
             </p>
             <p>
                    <input type="text" name="Login" value="" />
               
             </p>
             <p>
                    <label for="Password">Пароль:</label>
             </p>
             <p>
                    <input type="password" name="Password" value="" />
             </p>

                <!--<button class="button" onclick="location.href='https://localhost:7281/MainPage'" type="button">Войти</button>-->
                <button class="button" type="submit">Войти</button>
                @if (!string.IsNullOrEmpty(ViewBag.Message))
                {
                    <div class="alert alert-danger"  style=" width:20%;height:5%;position:relative; top:20px; left:-2%">@ViewBag.Message</div>
                }
            </div>
           
        </main>
    </form>
</body>