@{
    ViewBag.Message = TempData["Message"];
    ViewData["Title"] = "Registration";

}
<body>
    <form asp-controller="Registration" asp-action="RegPage" method="post">
    <main>
            <legend style="position:absolute; top:10%;left:40%"><b>Придумайте логин и пароль</b></legend>
        <div style="position:absolute; top:15%;left:45%; width:40%;height:70%px">
            <p>
                <label for="Login">Логин:  </label>
            </p>
            <p>
                <input type="text" name="Login" value="" />

            </p>
            <p>
                <label for="Password">Пароль:</label>
            </p>
            <p>
                <input type="password" name="Password" value="" />
            </p>

            <!--<button class="button" onclick="location.href='https://localhost:7281/MainPage'" type="button">Зарегистрироваться</button>-->
            <button class="button" type="submit">Зарегистрироваться</button>
            @if (!string.IsNullOrEmpty(ViewBag.Message))
            {
                <div class="alert alert-danger" style="width:37%;height:5%;position:relative; top:20px">@ViewBag.Message</div>
            }
        </div>

    </main>
</form>
</body>